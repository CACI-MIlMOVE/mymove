#! /usr/bin/env bash

#
# Pre-commit hook to run `swagger validate` that is different based on environment
#

set -eu -o pipefail

filename="$1"
readonly filename

UNAME_S=$(uname -s)
if [ "$UNAME_S" == "Linux" ]; then
  /usr/local/bin/swagger validate "${filename}"
else
  make bin/swagger
  bin/swagger validate "${filename}"
fi
