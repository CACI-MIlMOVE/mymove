#! /usr/bin/env bash

set -eu -o pipefail

#
# Deploy the app tasks
#

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
readonly DIR

usage() {
  echo "$0 <environment>"
  exit 1
}

readonly environment="${1:-experimental}"

[[ -z "${environment}" ]] && usage

case "${environment}" in
  experimental)
    compare_host=my.experimental.move.mil
    ;;
  staging)
    compare_host=my.staging.move.mil
    ;;
  prod)
    compare_host=my.move.mil
    ;;
  *)
    echo "<environment> must be one of experimental, staging, or prod"
    exit 1
    ;;
esac

if [ -z "${AWS_ACCOUNT_ID}" ]; then
  echo "AWS_ACCOUNT_ID not found!"
  echo "Please add 'AWS_ACCOUNT_ID' to your .envrc.local"
  exit 1
fi

APP_ENVIRONMENT="${environment}"
AWS_DEFAULT_REGION=us-west-2
CIRCLE_SHA1=$(curl -s "https://${compare_host}/health" | jq -r .gitCommit)

scripts/compare-deployed-commit "${compare_host}" "${CIRCLE_SHA1}"

echo "Deploying save-fuel-price-data"

task_def_arn_save_fuel_price_data=$(bin/ecs-deploy-task-container \
  --aws-account-id "${AWS_ACCOUNT_ID}" \
  --aws-region "${AWS_DEFAULT_REGION}" \
  --service app-tasks \
  --environment "${APP_ENVIRONMENT}" \
  --image-tag "${AWS_ACCOUNT_ID}.dkr.ecr.us-west-2.amazonaws.com/app-tasks:git-${CIRCLE_SHA1}" \
  --variables-file "${DIR}/../config/env/${APP_ENVIRONMENT}.save-fuel-price-data.env" \
  --entrypoint "/bin/milmove-tasks save-fuel-price-data")
readonly task_def_arn_save_fuel_price_data

bin/ecs-deploy put-target \
  --aws-account-id "${AWS_ACCOUNT_ID}" \
  --aws-region us-west-2 \
  --environment experimental \
  --name save-fuel-price-data \
  --task-def-arn "${task_def_arn_save_fuel_price_data}"

echo "Deploying send-post-move-survey"

task_def_arn_send_post_move_survey=$(bin/ecs-deploy-task-container \
  --aws-account-id "${AWS_ACCOUNT_ID}" \
  --aws-region "${AWS_DEFAULT_REGION}" \
  --service app-tasks \
  --environment "${APP_ENVIRONMENT}" \
  --image-tag "${AWS_ACCOUNT_ID}.dkr.ecr.us-west-2.amazonaws.com/app-tasks:git-${CIRCLE_SHA1}" \
  --variables-file "${DIR}/../config/env/${APP_ENVIRONMENT}.send-post-move-survey.env" \
  --entrypoint "/bin/milmove-tasks send-post-move-survey")
readonly task_def_arn_send_post_move_survey

bin/ecs-deploy put-target \
  --aws-account-id "${AWS_ACCOUNT_ID}" \
  --aws-region us-west-2 \
  --environment experimental \
  --name send-post-move-survey \
  --task-def-arn "${task_def_arn_send_post_move_survey}"
