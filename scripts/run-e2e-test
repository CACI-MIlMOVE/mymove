#! /usr/bin/env bash

set -eu -o pipefail

# Runs both the webserver and Cypress in parallel
trap "kill %1" SIGINT

CYPRESS_PORT=4000
DB_ENV=test DB_PORT="$DB_PORT_TEST" LOGIN_GOV_CALLBACK_PORT="$CYPRESS_PORT" NO_TLS_ENABLED=1 NO_TLS_PORT="$CYPRESS_PORT" DTOD_USE_MOCK=1 \
    ./bin/gin \
    --build cmd/milmove \
		--bin /bin/webserver_e2e \
		--port 8090 --appPort 8091 \
		--excludeDir vendor --excludeDir node_modules \
    --immediate \
		--buildArgs "-i" serve &

# Run cypress with these NODE_OPTIONS for compatibility between our older cypress 8.x and node 18
# (which uses openssl 3.x). This is a temporary fix until playwright replaces cypress.
NODE_OPTIONS=--openssl-legacy-provider npx cypress open || true

# Terminate the background webserver
kill %1
