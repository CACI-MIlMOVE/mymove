create_table("shipment_line_item_dimensions") {
    t.Column("id", "uuid", {"primary": true})
    t.Column("length", "integer")
    t.Column("width", "integer")
    t.Column("height", "integer")
    t.Column("unit", "string")
    t.Column("decimal_places", "integer")
}

add_column("shipment_line_items", "item_dimension_id", "uuid", {"null": true})
add_foreign_key("shipment_line_items", "item_dimension_id", {"shipment_line_item_dimensions": ["id"]}, {})

add_column("shipment_line_items", "crate_dimension_id", "uuid", {"null": true})
add_foreign_key("shipment_line_items", "crate_dimension_id", {"shipment_line_item_dimensions": ["id"]}, {"name": "shipment_line_item_dimensions_crate_fk"})

add_column("shipment_line_items", "description", "text", {"default": ""})